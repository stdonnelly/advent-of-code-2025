{
    "java.configuration.updateBuildConfiguration": "interactive",
    "cSpell.words": [
        "adventofcode",
        "snakeyaml",
        "stdonnelly"
    ],
    // Disable the Red Hat formatter in favor of the standalone Google formatter extension
    "java.format.enabled": false,
    "java.format.settings.google.version": "1.33.0",
    "java.debug.settings.exceptionBreakpoint.exceptionTypes": [
        "java.lang.ArrayIndexOutOfBoundsException",
        "java.lang.reflect.InvocationTargetException",
        "java.lang.IndexOutOfBoundsException"
    ],
    // Comply with Google Java Format
    "[java]": {
        "editor.tabSize": 2
    },
}